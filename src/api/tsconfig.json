{
  "compilerOptions": {
    //"outDir": "./dist",
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
